<Window x:Class="Backgammon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Backgammon" MinHeight="600" MinWidth="800" Height="720" Width="1280" Icon="Resources/icon.png" BorderBrush="Black" ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterScreen" WindowStyle="None"
        MouseLeftButtonDown="Window_MouseLeftButtonDown" AllowsTransparency="True" Background="#FF073E16">
    <Grid>
        <Button Name="maximize" Click="maximize_Click" Content="[___]" HorizontalAlignment="Right" Margin="0,10,43,0" VerticalAlignment="Top" Width="28" Height="28" Background="#FFB87B23"/>
        <Button Name="minimize" Click="minimize_Click" Content="_____" HorizontalAlignment="Right" Margin="0,10,76,0" VerticalAlignment="Top" Width="28" Height="28" Background="#FFB87B23"/>
        <Button Name="exit" Click="exit_Click" Content="X" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="28" Height="28" Background="#FFB41616"/>
        
        <Viewbox Stretch="Fill">
            <Canvas HorizontalAlignment="Left" Height="667" Margin="20,40,20,20" VerticalAlignment="Top" Width="1192">
                <Canvas.Background>
                    <ImageBrush ImageSource="Resources/bgBackgammonNice.png"/>
                </Canvas.Background>
            </Canvas>
        </Viewbox>
        
    </Grid>
</Window>
