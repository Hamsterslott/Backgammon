<Window x:Class="Backgammon.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Backgammon" Height="600" Width="800" Icon="Resources/icon.png" 
        WindowStyle="None" BorderBrush="Transparent" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" AllowsTransparency="True">
    <Window.Background>
        <ImageBrush ImageSource="Resources/splashBG.png"/>
    </Window.Background>
    <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>
        <Button Name="btnPlay" Click="btnPlay_Click" FontSize="22" FontWeight="ExtraBold" Foreground="Orange" BorderBrush="Orange" Background="Transparent" Content="PLAY" HorizontalAlignment="Left" Margin="386,213,0,0" VerticalAlignment="Top" Width="170" Height="45" RenderTransformOrigin="0.5,0.5"/>
        <Button Name="btnExit" Click="btnExit_Click" FontSize="20" FontWeight="ExtraBold" Foreground="Orange" BorderBrush="Orange" Background="Transparent" Content="EXIT" HorizontalAlignment="Left" Margin="430,281,0,0" VerticalAlignment="Top" Width="125" Height="33" RenderTransformOrigin="0.5,0.5"/>
    </Grid>
</Window>
